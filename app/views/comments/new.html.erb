<h2>Please add a new Comment</h2>
<div id="new-comments-form">
	<%= form_for [@article, @comment] do |f| %>
	     <%= f.text_field :commenter, :placeholder => "Name" %><br/>
	     <%= f.text_area :body , size: "60x12", :placeholder => "Your Comment" %>
	     <%= f.submit 'Create' %>
	<% end %>
</div>